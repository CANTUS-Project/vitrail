{
  "ecmaFeatures": {
    "jsx": true,
    "modules": true,
  },
  "env": {
    "browser": true,
    "es6": true,
    "jest": true,
    "node": true,
  },
  "extends": "eslint:recommended",
  "plugins": ["react"],
  "rules": {
    // possible errors
    "comma-dangle": [1, "always-multiline"],
    "no-unexpected-multiline": 2,
    "valid-jsdoc": 1,
    // best practices
    "curly": [2, "all"],
    "default-case": 2,
    "dot-location": [2, "property"],
    "dot-notation": 1,
    "eqeqeq": 2,
    "guard-for-in": 2,
    "no-alert": 2,
    "no-caller": 2,
    "no-case-declarations": 2,
    "no-div-regex": 2,
    "no-else-return": 1,
    "no-empty-label": 2,
    "no-empty-pattern": 2,
    "no-eq-null": 2,
    "no-eval": 2,
    "no-extend-native": 2,
    "no-extra-bind": 1,
    "no-floating-decimal": 1,
    "no-implicit-coercion": 2,
    "no-implied-eval": 2,
    "no-iterator": 2,
    "no-labels": 2,
    "no-lone-blocks": 2,
    "no-loop-func": 2,
    "no-magic-numbers": 1,
    "no-multi-spaces": 1,
    "no-native-reassign": 2,
    "no-new-func": 2,
    "no-new-wrappers": 2,
    "no-new": 1,
    "no-param-reassign": 1,
    "no-process-env": 2,
    "no-proto": 2,
    "no-return-assign": 2,
    "no-script-url": 2,
    "no-self-compare": 2,
    "no-sequences": 2,
    "no-throw-literal": 2,
    "no-unused-expressions": 2,
    "no-useless-call": 2,
    "no-useless-concat": 2,
    "no-void": 2,
    "no-warning-comments": [1, {"terms": ["todo", "fixme", "xxx", "debug"], "location": "start"}],
    "no-with": 2,
    "radix": [1, "as-needed"],
    // variables
    "no-shadow-restricted-names": 2,
    "no-undef-init": 1,
    // stylistic
    "array-bracket-spacing": [1, "never"],
    "block-spacing": [1, "always"],
    "brace-style": [1, "stroustrup"],
    "camelcase": 2,
    "comma-spacing": 1,
    "func-names": 1,
    "func-style": [1, "declaration"],
    "id-length": [1, {"min": 3, "max": 20, "exceptions": ["i", "j", "id", "shouldComponentUpdate"]}],
    "indent": 2,
    "jsx-quotes": [1, "prefer-double"],
    "key-spacing": [2, {"beforeColon": false, "afterColon": true}],
    "max-len": [1, 110, 4],
    "max-nested-callbacks": [2, 3],
    "max-params": [1, 4],
    "max-statements": [2, 30],
    "new-cap": [2, {"capIsNewExceptions": ["List", "Map", "Store", "OrderedMap"]}],
    "new-parens": 2,
    "no-array-constructor": 2,
    "no-bitwise": 2,
    "no-continue": 1,
    "no-lonely-if": 1,
    "no-negated-condition": 1,
    "no-nested-ternary": 2,
    "no-new-object": 2,
    "no-plusplus": 2,
    "no-spaced-func": 1,
    "no-trailing-spaces": 1,
    "no-unneeded-ternary": 1,
    "object-curly-spacing": [2, "never"],
    "operator-assignment": [1, "always"],
    "padded-blocks": [1, "never"],
    "quote-props": [2, "consistent-as-needed"],
    "require-jsdoc": 1,
    "semi-spacing": 1,
    "semi": [2, "always"],
    "space-after-keywords": 1,
    "space-before-blocks": 1,
    "space-before-function-paren": [2, "never"],
    "space-before-keywords": 1,
    "space-in-parens": [2, "never"],
    "space-infix-ops": 2,
    "space-return-throw-case": 2,
    "space-unary-ops": 2,
    "spaced-comment": [1, "always"],
    "wrap-regex": 2,
    // ES6
    "arrow-body-style": [1, "as-needed"],
    "arrow-parens": 1,
    "arrow-spacing": 1,
    "no-var": 2,
    "prefer-const": 1,
    "prefer-template": 1,
    // React
    "react/forbid-prop-types": 2,
    "react/jsx-boolean-value": [1, "never"],
    "react/jsx-closing-bracket-location": 1,
    "react/jsx-curly-spacing": [1, "never"],
    "react/jsx-equals-spacing": [2, "never"],
    "react/jsx-handler-names": 1,
    "react/jsx-indent-props": 1,
    "react/jsx-indent": 1,
    "react/jsx-key": 2,
    "react/jsx-no-bind": 2,
    "react/jsx-no-duplicate-props": 2,
    "react/jsx-no-literals": 2,
    "react/jsx-no-undef": 2,
    "react/jsx-pascal-case": 2,
    "react/jsx-sort-prop-types": 1,
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1,
    "react/no-danger": 2,
    "react/no-deprecated": 1,
    "react/no-did-mount-set-state": 1,
    "react/no-did-update-set-state": 1,
    "react/no-direct-mutation-state": 2,
    "react/prop-types": 2,
    "react/self-closing-comp": 1,
    "react/wrap-multilines": 1,
  }
}
